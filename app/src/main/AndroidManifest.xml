<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.autoreportgenerator">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoReportGenerator"
        tools:targetApi="31">
        <activity android:name=".view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AutoReportGenerator.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegistrationActivity"
            android:exported="false"
            android:label="@string/title_activity_registartion"
            android:theme="@style/Theme.AutoReportGenerator.NoActionBar" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AutoReportGenerator.NoActionBar"/> >
    </application>

</manifest>